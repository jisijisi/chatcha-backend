  "response_templates": {
    "by_phase": {
      "attract": {
        "definition": "In the Attract phase, {{concept}} refers to {{definition}}. Key aspects include: {{key_points}}",
        "process": "The hiring process involves {{step_count}} main stages: {{steps}}. Key considerations: {{considerations}}",
        "policy": "CDO's policy on {{policy_topic}} states: {{policy_text}}. Exceptions: {{exceptions}}"
      },
      "onboard": {
        "definition": "During Onboarding, {{concept}} means {{definition}}. Leader's role: {{leader_role}}",
        "process": "Onboarding follows {{stage_count}} stages: {{stages}}. Critical timelines: {{timelines}}",
        "policy": "The probationary policy requires {{requirements}}. Note: {{important_notes}}"
      },
      "engage": {
        "definition": "In Employee Engagement, {{concept}} is defined as {{definition}}. Framework: {{framework}}",
        "process": "The {{process_name}} process: {{steps}}. Violation classes: {{violation_classes}}",
        "policy": "Code of Conduct Policy: {{policy}}. Progressive discipline: {{discipline_matrix}}"
      }
    },
    "by_intent": {
      "definition": "**{{concept}}**\n\n{{definition}}\n\n**Key Characteristics:**\n{{characteristics}}\n\n**Examples:** {{examples}}",
      "process": "## Process: {{process_name}}\n\n**Steps:**\n{{numbered_steps}}\n\n**Timeline:** {{timeline}}\n**Responsibilities:** {{responsibilities}}",
      "policy": "## Policy: {{policy_name}}\n\n**Policy Text:** {{policy_text}}\n\n**Requirements:** {{requirements}}\n**Exceptions:** {{exceptions}}\n**Contact:** {{contacts}}"
    }
  },

  "cross_phase_references": {
    "performance_issues": {
      "primary_phase": "engage",
      "related_phases": ["develop", "offboard"],
      "triggers": ["poor performance", "underperforming", "performance issues"],
      "response_guidance": "Address performance management first, then development options, finally separation if unresolved"
    },
    "career_growth": {
      "primary_phase": "develop",
      "related_phases": ["engage", "attract"],
      "triggers": ["promotion", "career path", "advancement", "next role"],
      "response_guidance": "Focus on development opportunities, link to performance, mention internal hiring processes"
    },
    "separation_causes": {
      "primary_phase": "offboard",
      "related_phases": ["engage", "develop"],
      "triggers": ["termination", "dismissal", "involuntary separation"],
      "response_guidance": "Reference disciplinary procedures from engage phase, then offboarding process"
    }
  },

  "quality_assurance": {
    "phase_validation": {
      "required_elements": {
        "attract": ["process_stages", "interview_guidelines", "hiring_policies"],
        "onboard": ["probation_timeline", "leader_responsibilities", "regularization_process"],
        "engage": ["code_of_conduct", "performance_cycle", "disciplinary_process"],
        "develop": ["development_cycle", "idp_process", "training_options"],
        "offboard": ["clearance_process", "separation_types", "final_requirements"]
      }
    },
    "completeness_check": {
      "always_include": ["relevant_contacts", "policy_references", "practical_next_steps"],
      "phase_specific_inclusions": {
        "engage": ["violation_class_reference", "progressive_discipline"],
        "onboard": ["probation_timeline", "regularization_deadlines"],
        "offboard": ["clearance_timeline", "final_pay_processing"]
      }
    }
  }
}