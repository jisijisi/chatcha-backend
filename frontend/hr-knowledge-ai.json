{
  "metadata": {
    "title": "The Leader's Playbook - AI Optimized",
    "subtitle": "Phase-Aligned HR Knowledge Base",
    "organization": "CDO Foodsphere, Inc.",
    "version": "Phase-Optimized Edition",
    "last_updated": "2024-01-01",
    "document_type": "AI-Optimized HR Knowledge Base"
  },

  "phase_optimization": {
    "strategy": "phase_first_intent_second",
    "confidence_threshold": 0.8,
    "fallback_behavior": "multi_phase_search"
  },

  "phase_detection_engine": {
    "attract": {
      "primary_keywords": ["hire", "recruit", "interview", "candidate", "job", "vacancy", "prf", "selection"],
      "secondary_keywords": ["staffing", "employment", "applicant", "onboard new", "fill position"],
      "weight_adjustments": {
        "behavioral_interview": 1.5,
        "internal_hiring": 1.3,
        "job_description": 1.2
      }
    },
    "onboard": {
      "primary_keywords": ["onboard", "new hire", "probation", "regularize", "orientation", "first day"],
      "secondary_keywords": ["integration", "welcome", "probationary", "clearance", "assimilation"],
      "weight_adjustments": {
        "probation_period": 1.5,
        "regularization": 1.4,
        "onboarding_buddy": 1.2
      }
    },
    "engage": {
      "primary_keywords": ["performance", "evaluate", "pef", "pip", "feedback", "coaching", "discipline"],
      "secondary_keywords": ["kpi", "kra", "bsc", "recognition", "reward", "code of conduct", "violation"],
      "weight_adjustments": {
        "code_of_conduct": 2.0,
        "performance_management": 1.5,
        "disciplinary_action": 1.7
      }
    },
    "develop": {
      "primary_keywords": ["develop", "training", "idp", "aspire", "career", "learning", "competency"],
      "secondary_keywords": ["skill", "capability", "succession", "development plan", "external training"],
      "weight_adjustments": {
        "idp": 1.6,
        "aspire": 1.4,
        "career_growth": 1.3
      }
    },
    "offboard": {
      "primary_keywords": ["resign", "terminate", "clearance", "exit", "separate", "retire", "back pay"],
      "secondary_keywords": ["final pay", "exit interview", "employee clearance", "awol", "retrenchment"],
      "weight_adjustments": {
        "clearance_process": 1.5,
        "exit_interview": 1.3,
        "separation_pay": 1.4
      }
    }
  },

  "intent_recognition": {
    "definition": {
      "triggers": ["what is", "define", "explain", "meaning of", "tell me about"],
      "response_style": "conceptual_clarity",
      "format": "definition + characteristics + examples"
    },
    "process": {
      "triggers": ["how to", "steps", "process", "procedure", "guide", "conduct"],
      "response_style": "step_by_step",
      "format": "numbered_steps + timelines + responsibilities"
    },
    "policy": {
      "triggers": ["policy", "rule", "guideline", "allowed", "permitted", "can i"],
      "response_style": "policy_focused",
      "format": "policy_text + exceptions + implications"
    },
    "contact": {
      "triggers": ["contact", "number", "email", "who to call", "reach out"],
      "response_style": "direct_reference",
      "format": "specific_contacts + alternatives + context"
    },
    "form": {
      "triggers": ["form", "template", "document", "format", "sample"],
      "response_style": "practical_guidance",
      "format": "form_names + purposes + access_points"
    },
    "timeline": {
      "triggers": ["when", "how long", "duration", "deadline", "timeline"],
      "response_style": "time_focused",
      "format": "specific_dates + durations + consequences"
    }
  },

